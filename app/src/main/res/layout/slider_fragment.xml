<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginTop="100dp"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_weight="0.03"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reciver: HC-05"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(00:14:01:03:38:8B)"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp"
            android:layout_weight="0.03">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delay"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/speedSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="110"
                    android:progress="10" />

                <TextView
                    android:id="@+id/speedValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 s"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp"
            android:layout_weight="0.21">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stop after"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <SeekBar
                    android:id="@+id/timeSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="120" />

                <TextView
                    android:id="@+id/timeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="unlimited"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark" />

                <SeekBar
                    android:id="@+id/imagesSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="747"
                    android:progress="747" />

                <TextView
                    android:id="@+id/imagesValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="747 images"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resolution"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/hd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HD (1280×720)" />

                <RadioButton
                    android:id="@+id/full_hd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Full HD (1920x1080)" />

                <RadioButton
                    android:id="@+id/fkC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="4K (4032×2268) " />

                <RadioButton
                    android:id="@+id/fk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4K (4032×2268) (uncompressed)" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="4dp">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:background="@android:color/background_light"
                    android:text="Connect" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
